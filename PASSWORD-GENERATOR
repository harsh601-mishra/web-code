import java.security.SecureRandom;
import java.util.Scanner;

public class PasswordGenerator {

    // Characters to use in password
    private static final String UPPERCASE = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    private static final String LOWERCASE = "abcdefghijklmnopqrstuvwxyz";
    private static final String DIGITS = "0123456789";
    private static final String SPECIAL_CHARS = "!@#$%^&*()-_=+[]{}|;:,.<>?";

    // Combined character set
    private static final String ALL_CHARS = UPPERCASE + LOWERCASE + DIGITS + SPECIAL_CHARS;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        SecureRandom random = new SecureRandom();

        System.out.print("Enter desired password length: ");

        int length;
        try {
            length = scanner.nextInt();
            if (length <= 0) {
                System.out.println("Password length must be a positive integer.");
                scanner.close();
                return;
            }
        } catch (Exception e) {
            System.out.println("Invalid input. Please enter a valid integer.");
            scanner.close();
            return;
        }

        String password = generatePassword(length, random);
        System.out.println("Generated password: " + password);

        scanner.close();
    }

    private static String generatePassword(int length, SecureRandom random) {
        StringBuilder password = new StringBuilder(length);

        for (int i = 0; i < length; i++) {
            int index = random.nextInt(ALL_CHARS.length());
            password.append(ALL_CHARS.charAt(index));
        }

        return password.toString();
    }
}
